<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <!-- Product Grid Filtering Extend -->
    <record id="custom_module_product_grid_filtering" model="ir.ui.view">
        <field name="name">product.template.custom.kanban</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_kanban_view"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <filter string="Expected Delivery" name="filter_expected_delivery" domain="[('expected_delivery', '=', 'desired_value')]"/>
            </xpath>
        </field>
    </record>
</odoo>