<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <!-- Display Expected Delivery on Product Grid -->
    <record id="view_product_grid_form_inherit" model="ir.ui.view">
        <field name="name">custom.product.template.kanban</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_kanban_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='product_lst_price']" position="inside">
                <br/>
                 <field name="expected_delivery"/>
                <br/>
            </xpath>
        </field>
    </record>
</odoo>